@model List<AdminOrderViewModel>

    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate</td>
            <td>@order.UserName</td>
            <td>@($"{order.TotalPrice:C0}")</td>
            <td class="text-center">
                <div class="custom-control custom-switch">
                    <input onchange="changeState(this, '@order.Id')" type="checkbox" class="custom-control-input" name="orderState"
                    @(order.State == "Hazırlanıyor" ? "checked" : " ")
                    id="order-state-@order.Id">
                <label class="custom-control-label" for="order-state-@order.Id">@order.State</label>
                </div>
            </td>
        </tr>
    }
    
