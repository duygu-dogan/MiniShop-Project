    <!-- Header Section Begin -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a class="font-weight-bolder" style="font-size:x-large; text-decoration:none; color:black" href="/">MiniShop App</a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <nav class="header__menu">
                    <ul>
                        <li class="active">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li>
                            <a href="#">Tüm Ürünler</a>
                        </li>
                        <li>
                            <a href="#">Kategoriler</a>
                        </li>
                        <li>
                            <a href="./shop.html">Kampanyalar</a>
                        </li>
                        @* <li>
                            <a href="#">Pages</a>
                            <ul class="dropdown">
                                <li><a href="./product-details.html">Product Details</a></li>
                                <li><a href="./shop-cart.html">Shop Cart</a></li>
                                <li><a href="./checkout.html">Checkout</a></li>
                                <li><a href="./blog-details.html">Blog Details</a></li>
                            </ul>
                        </li>
                        <li><a href="./blog.html">Blog</a></li> *@
                        <li>
                            <a href="./contact.html">İletişim</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    <ul class="header__right__widget">
                        <li class="dropdown" style="margin-right: 10px">
                            <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user-circle-o" style="font-size: 23px" aria-hidden="true"></i>
                            </a>
                            <div class="dropdown-menu">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a class="dropdown-item" style="font-size: 15px" asp-area=""
                                       asp-controller="Account"
                                       asp-action="Login">Giriş Yap</a>
                                    <a class="dropdown-item" style="font-size: 15px" asp-area=""
                                       asp-controller="Account"
                                       asp-action="Register">Kayıt Ol</a>
                                }
                                else
                                {
                                    if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item" style="font-size: 15px" asp-area="Admin"
                                           asp-controller="Home"
                                           asp-action="Index">Admin Panel</a>
                                    }
                                    <a class="dropdown-item" style="font-size: 15px" asp-area=""
                                       asp-controller="Account"
                                       asp-action="Profile">@User.Identity.Name</a>
                                    <a class="dropdown-item" style="font-size: 15px" asp-area=""
                                       asp-controller="Account"
                                       asp-action="Logout">Çıkış</a>
                                }
                            </div>
                        </li>
                        <li><span class="icon_search search-switch"></span>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            @await Component.InvokeAsync("MessageNotification")
                            @await Component.InvokeAsync("ShoppingCartNotification", User.Identity.Name ?? null)
                        }
                        
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
<!-- Header Section End -->
