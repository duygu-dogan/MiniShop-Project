@model ChangePasswordViewModel
<div class="container w-25">
    <h2 class="text-center mb-3 font-weight-bold">Şifre Değiştirme</h2>
    <hr />
    <form asp-area="" asp-controller="Account" asp-action="ChangePassword" method="post">
        <div class="text danger" asp-validation-summary="All"></div>
        <div class="form-group mb-2">
            <label asp-for="OldPassword"></label>
            <input class="form-control" asp-for="OldPassword" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="NewPassword"></label>
            <input class="form-control" asp-for="NewPassword" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="ReNewPassword"></label>
            <input class="form-control" asp-for="ReNewPassword" />
        </div>
        <div>
            <button type="submit" class="btn btn-success">Şifreyi Değiştir</button>
            <a href="/" type="submit" class="btn btn-secondary">Vazgeç</a>
        </div>
    </form>
</div>
